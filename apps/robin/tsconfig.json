{
  "extends": "@oxygen/tsconfig/next.json",
  "compilerOptions": {
    "baseUrl": ".",
    "preserveSymlinks": true,
    "paths": {
      "@/*": ["src/*"],
      "@/content": ["src/content/*"],
      "@/env": ["src/env/*"],
      "@/pages": ["src/pages/*"],
      "@/schema": ["src/schema/*"],
      "@/scripts": ["src/scripts/*"],
      "@/server": ["src/serverA/*"],
      "@/styles": ["src/styles/*"],
      "@/third-party": ["src/third-party/*"],
      "@/trpc": ["src/trpc/*"],
      "@/types": ["src/types/*"],
      "@/utils": ["src/utils/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/content/controls/signin/indextsx"
  ],
  "exclude": ["node_modules"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
