{
  "extends": "@oxygen/tsconfig/next.json",
  "compilerOptions": {
    "baseUrl": ".",
    "preserveSymlinks": true,
    "paths": {
      "@/*": ["src/*"],
      "@/content/*": ["src/content/*"],
      "@/config/*": ["src/config/*"],
      "@/api/*": ["src/api/*"],
      "@/utils/*": ["src/utils/*"],
      "@/context/*": ["../../packages/design-system/src/context/*"],
      "@/src/*": ["src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
